{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "types": [
        "./src/@types/auth.d.ts",
        "./src/@types/types.d.ts",
        "./src/@types/redux.d.ts",
        "./src/@types/slate.d.ts"
      ]
    }
    // "sourceMap": true // used to debug the program
  },
  "include": [
    "next-env.d.ts",
    "src/@types/types.d.ts",
    "src/@types/auth.d.ts",
    "src/@types/redux.d.ts",
    "./src/@types/slate.d.ts",
    "src",
    "**/*.ts",
    "**/*.tsx",
    "pages/api/auth/[...nextauth].js",
    "pages/_document.js"
  ],
  "exclude": ["node_modules"]
}
